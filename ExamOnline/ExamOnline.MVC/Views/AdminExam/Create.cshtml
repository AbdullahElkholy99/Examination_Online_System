        <input asp-for="UpdatedAt" type="datetime-local" class="form-control" />
    </div> *@

    <div class="mb-3">
        <label>Course</label>
        <select asp-for="Course_Id" class="form-select">
            @foreach (var c in Model.Courses)
            {
