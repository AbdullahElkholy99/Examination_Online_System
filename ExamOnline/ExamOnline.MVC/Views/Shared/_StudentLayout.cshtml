@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var studentId = HttpContextAccessor.HttpContext?
        .Session.GetInt32("StudentId");

    var currentAction =
        ViewContext.RouteData.Values["action"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Student Dashboard</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

    <!-- Sidebar CSS -->
    <link rel="stylesheet" href="~/css/student-sidebar.css" />
</head>
<body>

    <!-- Mobile Navbar -->
    <nav class="navbar navbar-dark bg-dark d-md-none">
        <div class="container-fluid">
            <button class="btn btn-outline-light"
                    data-bs-toggle="offcanvas"
                    data-bs-target="#studentSidebar">
                ☰
            </button>
            <span class="navbar-brand">Student</span>
        </div>
    </nav>

    <!-- ===== MAIN FLEX LAYOUT ===== -->
    <div class="layout-wrapper">

        <!-- ===== LEFT SIDEBAR ===== -->
        <aside id="studentSidebar"
               class="sidebar offcanvas-md offcanvas-start">

            <div class="sidebar-header">
                <h4>👨‍🎓 Student</h4>
                @if (studentId != null)
                {
                    <small>ID: @studentId</small>
                }
            </div>

            <ul class="nav flex-column sidebar-menu">

                <li class="nav-item">
                    <a asp-controller="Student"
                       asp-action="Dashboard"
                       class="nav-link @(currentAction == "Dashboard" ? "active" : "")">
                        🏠 Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Student"
                       asp-action="Courses"
                       class="nav-link @(currentAction == "Courses" ? "active" : "")">
                        📚 My Courses
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Student"
                       asp-action="Results"
                       class="nav-link @(currentAction == "Results" ? "active" : "")">
                        📊 Results
                    </a>
                </li>

                <li class="nav-item">
                    <a asp-controller="Student"
                       asp-action="Progress"
                       class="nav-link @(currentAction == "Progress" ? "active" : "")">
                        📈 Progress
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Student"
                       asp-action="Results"
                       class="nav-link @(currentAction == "Progress" ? "active" : "")">
                        📊 Go to Results & Review
                    </a>
                </li>


                <li class="nav-item">
                    <a asp-controller="Student"
                       asp-action="ResetStudent"
                       class="nav-link text-warning">
                        🔄 Change Student
                    </a>

                </li>

            </ul>
        </aside>

        <!-- ===== RIGHT CONTENT (DASHBOARD) ===== -->
        <main class="content">
            <div class="page-wrapper">
                @RenderBody()
            </div>
        </main>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
