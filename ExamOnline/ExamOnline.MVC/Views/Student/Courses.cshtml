@model StudentCoursesVM
@{
    Layout = "_StudentLayout";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />

<div class="container my-4">

    <h2 class="mb-4 text-center">My Courses</h2>

    @if (Model.Student != null)
    {
        <!-- Student Info -->
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <h5>Student Info</h5>
                <p><strong>Name:</strong> @Model.Student.Name</p>
                <p><strong>Branch:</strong> @Model.Student.Branch.Name</p>
                <p><strong>Track:</strong> @Model.Student.Track.Name</p>
            </div>
        </div>

        <!-- Courses -->
        <div class="row">
            @foreach (var c in Model.Courses)
            {
                <div class="col-lg-4 col-md-6 col-12 mb-3">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@c.CourseName</h5>

                            <p class="text-muted">
                                ⏱ Duration: @c.Duration hours
                            </p>

                            @if (c.ExamId != null)
                            {
                                <a class="btn btn-primary mt-auto"
                                   asp-controller="ExamAttempt"
                                   asp-action="StartExam"
                                   asp-route-examId="@c.ExamId">
                                     Start Exam
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-secondary mt-auto" disabled>
                                    No Exam Available
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
