@model CreateInstructorVM
@{
    Layout = "_AdminLayout";
}

<h2 class="mb-4">👨‍🏫 Add Instructor</h2>

<div class="card shadow-sm">
    <div class="card-body">

        <form method="post">

            <div class="mb-3">
                <label class="form-label">Name</label>
                <input asp-for="Name"
                       class="form-control"
                       placeholder="Instructor name"
                       required />
            </div>

            <div class="mb-3">
                <label class="form-label">Email</label>
                <input asp-for="Email"
                       class="form-control"
                       placeholder="example@mail.com" />
            </div>

            <div class="mb-3">
                <label class="form-label">Branch</label>
                <select asp-for="BranchId"
                        asp-items="ViewBag.Branches"
                        class="form-select"
                        required>
                    <option value="">-- Select Branch --</option>
                </select>
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-success">
                    💾 Save
                </button>

                <a asp-action="Index"
                   class="btn btn-secondary">
                    Cancel
                </a>
            </div>

        </form>

    </div>
</div>
