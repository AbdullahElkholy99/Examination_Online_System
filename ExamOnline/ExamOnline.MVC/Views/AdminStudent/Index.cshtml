@model List<StudentDTO>
@{
    Layout = "_AdminLayout";
}

<h2 class="mb-4">👥 Students</h2>

<a asp-action="Create" class="btn btn-primary mb-3">➕ Add Student</a>

<table class="table table-striped shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Branch</th>
            <th>Track</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@s.ID</td>
                <td>@s.Email</td>
                <td>@s.BranchName</td>
                <td>@s.TrackName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@s.ID" class="btn btn-sm btn-warning">✏</a>
                    <a asp-action="Delete" asp-route-id="@s.ID"
                       onclick="return confirm('Delete this student?')"
                       class="btn btn-sm btn-danger">🗑</a>
                </td>
            </tr>
        }
    </tbody>
</table>
